<?xml version="1.0" encoding="UTF-8"?>
<package xmlns="http://schemas.microsoft.com/packaging/2012/06/nuspec.xsd">
	<metadata>
		<id>YaccLexTools.Gplex</id>
		<version>1.2.2.1</version>
		<title>Gplex Tool</title>
		<authors>Ernesto Cianciotta</authors>
		<owners>ernstc</owners>
		<copyright>© 2009 QUT, Wayne Kelly - © 2022 Ernesto Cianciotta</copyright>
		<description>Gardens Point Scanner Generator (GPLEX) binary and MSBuild targets for SDK-style projects</description>
		<license type="file">LICENSE.md</license>
		<readme>docs\README.md</readme>
		<icon>images\Icon.png</icon>
		<tags>gplex gppg yacc lex tools parser syntax ast compile language grammar LALR c#</tags>
		<repository type="git" url="https://github.com/ernstc/gplex" />
		<dependencies>
			<group targetFramework=".NETFramework2.0" />
			<group targetFramework="netcoreapp2.2" />
			<group targetFramework="netcoreapp3.1" />
			<group targetFramework="net5.0" />
			<group targetFramework="net6.0" />
			<group targetFramework=".NETStandard2.0" />
		</dependencies>
	</metadata>
	<files>
		<file src="..\LICENSE.md" target="" />
		<file src="..\README.md" target="docs\" />
		<file src="..\Resources\Icon.png" target="images\" />
		
		<!-- Placeholders indicating host project compatibility. The tools can be used in any .NET Framework and .NET Standard projects -->
		<file src="_._" target="lib/netstandard2.0/" />
		<file src="_._" target="lib/net20/" />
		<file src="_._" target="lib/netcoreapp2.2/" />
		<file src="_._" target="lib/netcoreapp3.1/" />
		<file src="_._" target="lib/net5.0/" />
		<file src="_._" target="lib/net6.0/" />

		<!-- Framework specific target that runs the real run target below on single target builds -->
		<file src="build/YaccLexTools.Gplex.targets" target="build/netstandard2.0/YaccLexTools.Gplex.targets" />
		<file src="build/YaccLexTools.Gplex.targets" target="build/net20/YaccLexTools.Gplex.targets" />
		<file src="build/YaccLexTools.Gplex.targets" target="build/netcoreapp2.2/YaccLexTools.Gplex.targets" />
		<file src="build/YaccLexTools.Gplex.targets" target="build/netcoreapp3.1/YaccLexTools.Gplex.targets" />
		<file src="build/YaccLexTools.Gplex.targets" target="build/net5.0/YaccLexTools.Gplex.targets" />
		<file src="build/YaccLexTools.Gplex.targets" target="build/net6.0/YaccLexTools.Gplex.targets" />

		<!-- Outer build target that runs the real run target below once on cross targeting builds -->
		<file src="buildCrossTargeting\YaccLexTools.Gplex.targets" target="buildCrossTargeting/YaccLexTools.Gplex.targets" />

		<!-- The target that actually runs the custom tool -->
		<file src="RunGplex.targets" target="tools" />

		<!-- The tool binaries. Note that the net20 binaries are included purely for distribution, they are not used by the build targets -->
		<file src="$publishdir$\net20\**\*" target="tools/net20/" />
		<file src="$publishdir$\netcoreapp2.2\**\*" target="tools/netcoreapp2.2/" />
		<file src="$publishdir$\netcoreapp3.1\**\*" target="tools/netcoreapp3.1/" />
		<file src="$publishdir$\net5.0\**\*" target="tools/net5.0/" />
		<file src="$publishdir$\net6.0\**\*" target="tools/net6.0/" />

		<file src="..\GPLEXcopyright.rtf" target="tools/net20/" />
		<file src="..\GPLEXcopyright.rtf" target="tools/netcoreapp2.2/" />
		<file src="..\GPLEXcopyright.rtf" target="tools/netcoreapp3.1/" />
		<file src="..\GPLEXcopyright.rtf" target="tools/net5.0/" />
		<file src="..\GPLEXcopyright.rtf" target="tools/net6.0/" />
	</files>
</package>
